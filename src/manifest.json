{
  "name": "FIS Jira",
  "version": "1.3.0",
  "description": "Jira timesheet automation tool for FIS employees",
  "manifest_version": 3,
  "icons": {
    "16": "./assets/icons/icon-16x16.png",
    "32": "./assets/icons/icon-32x32.png",
    "48": "./assets/icons/icon-48x48.png",
    "64": "./assets/icons/icon-64x64.png",
    "128": "./assets/icons/icon-128x128.png"
  },
  "permissions": [
    "cookies"
  ],
  "host_permissions": [
    "https://jira.fis.com.vn/*"
  ],
  "action": {
    "default_popup": "./modules/popup/popup.html"
  },
  "background": {
    "service_worker": "./background.ts",
    "type": "module"
  },
  "options_ui": {
    "page": "./modules/options/options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": [
        "./assets/excel.jpg",
        "./assets/jira.excel.template.xlsx",
        "./**/*.{ts,tsx,md,html}",
        "./README.md"
      ],
      "matches": []
    }
  ]
}
