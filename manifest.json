{
  "name": "FIS Jira",
  "version": "1.3.6",
  "description": "Jira timesheet automation tool for FIS employees",
  "manifest_version": 3,
  "icons": {
    "16": "assets/icons/icon-16x16.png",
    "32": "assets/icons/icon-32x32.png",
    "48": "assets/icons/icon-48x48.png",
    "64": "assets/icons/icon-64x64.png",
    "128": "assets/icons/icon-128x128.png"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "tabs"
  ],
  "host_permissions": [
    "https://jira.fis.com.vn/*"
  ],
  "action": {},
  "background": {
    "service_worker": "./src/background.ts",
    "type": "module"
  },
  "options_ui": {
    "page": "./src/modules/options/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "js": [
        "src/jira.fis.com.vn.tsx"
      ],
      "matches": [
        "https://jira.fis.com.vn/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/jira.fis.com.vn.tsx",
        "assets/jira.excel.template.xlsx"
      ],
      "matches": [
        "https://jira.fis.com.vn/*"
      ]
    }
  ]
}